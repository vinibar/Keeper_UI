<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.commons.form">
    <Dialog title="Customer" class="sapUiResponsivePadding--content sapUiResponsivePadding--header sapUiResponsivePadding--footer sapUiResponsivePadding--subHeader">
        <content>
            <f:SimpleForm>
                <f:content>
                    <Label text="Name" />
                    <Input value="{customer>/name}" />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="{i18n>dialogCloseButtonText}" press=".onSaveCustomer" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>